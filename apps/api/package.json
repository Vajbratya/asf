    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.4.1",
    "@integrasaude/shared": "workspace:*",
    "@prisma/client": "^5.7.1",
    "@upstash/qstash": "^2.8.4",
    "@upstash/redis": "^1.28.0",
    "axios": "^1.6.2",
    "fast-xml-parser": "^4.3.2",
    "hono": "^3.12.0",
    "pino": "^8.17.2",
    "prom-client": "^15.1.0",
    "stripe": "^20.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "prisma": "^5.7.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
