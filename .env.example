# IntegraSaÃºde Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/integrasaude?schema=public"

# =============================================================================
# API CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT=3001
API_URL="http://localhost:3001"

# =============================================================================
# WEB APP CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# AUTHENTICATION (WorkOS)
# =============================================================================
# Get these from: https://dashboard.workos.com
WORKOS_API_KEY="sk_test_..."
WORKOS_CLIENT_ID="client_..."
WORKOS_COOKIE_PASSWORD="complex-password-at-least-32-characters-long"
WORKOS_REDIRECT_URI="http://localhost:3000/api/auth/callback"

# =============================================================================
# STRIPE BILLING
# =============================================================================
# Get these from: https://dashboard.stripe.com

# Secret key (server-side only)
STRIPE_SECRET_KEY="sk_test_..."

# Publishable key (client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Webhook secret (from Stripe CLI or Dashboard)
STRIPE_WEBHOOK_SECRET="whsec_..."

# Price IDs for subscription plans
# Create these in Stripe Dashboard > Products
STRIPE_PRICE_STARTER_MONTHLY="price_..."
STRIPE_PRICE_STARTER_ANNUAL="price_..."
STRIPE_PRICE_PROFESSIONAL_MONTHLY="price_..."
STRIPE_PRICE_PROFESSIONAL_ANNUAL="price_..."

# =============================================================================
# REDIS/UPSTASH (Usage Metering & Queue)
# =============================================================================
# Get these from: https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://...upstash.io"
UPSTASH_REDIS_REST_TOKEN="..."

# QStash for background jobs (optional)
QSTASH_URL="https://qstash.upstash.io"
QSTASH_TOKEN="..."
QSTASH_CURRENT_SIGNING_KEY="..."
QSTASH_NEXT_SIGNING_KEY="..."

# =============================================================================
# ALLOWED ORIGINS (CORS)
# =============================================================================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_METRICS="true"
ENABLE_WEBHOOKS="true"
ENABLE_BILLING="true"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL="info" # debug, info, warn, error
